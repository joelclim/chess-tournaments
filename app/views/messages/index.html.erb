<div class='row'>
<div class='col-sm-2'>
  <h2>&nbsp;</h2>
  <p><%= link_to "Inbox", messages_path, class: 'btn btn-default btn-xs btn-block' %></p>
  <p><%= link_to "Sent", messages_path(show: 'sent'), class: 'btn btn-default btn-xs btn-block' %></p>
</div>
<div class='col-sm-10'>
  <h2><%= @folder.humanize %> Messages</h2>
<table class='table table-hover'>
<tr>
  <th>From</th>
  <th>Subject</th>
</tr>
<% @messages.each do |message| -%>
  <tr>
    <td><%= link_to message.user.full_name, message -%></td>
    <td><%= link_to message.subject, message -%></td>
  </tr>
<%- end %>
</table>
</div>
</div>
