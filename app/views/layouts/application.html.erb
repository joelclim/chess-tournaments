<!DOCTYPE html>
<html>
<head>
  <title>Chess::Tournaments</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='container'>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#chess-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "Chess::Tournaments", root_path, title: "Home", class: "navbar-brand" %>
        </div>
        <div class="collapse navbar-collapse" id="chess-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
          <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default form-control">Submit</button>
          </form>
          <% if user_signed_in? %>
            <li><%= link_to messages_path,
              class: 'navbar-left', role: "button" do %>
              Messages <span class="badge"><%= current_user.unread_messages.size %></span>
            <% end %></li>
            <li class="dropdown">
              <%# style: 'color:white;font-weight: bold' %>
              <%- if current_user.image %>
                <% uimg = image_tag(current_user.image, size: "32x32") %>
              <%- end %>
              <%= link_to uimg + " " + current_user.full_name + " > ",'#',
                class: "dropdown-toggle", data: { toggle: "dropdown" },
                role: "button"
              %> 
              <ul class="dropdown-menu" role="menu">
                <li>
                <%= link_to ' Sign Out',
                  destroy_user_session_path,
                  method: :delete,
                  class: "glyphicon glyphicon-log-out",
                  title: "Terminate session"
                %> 
                </li>
              </ul>
            </li>
          <% else %>
            <li class="dropdown">
            <%= link_to "Sign In > ",'#',
                class: "dropdown-toggle", data: { toggle: "dropdown" },
                role: "button"
               %>
            <ul class="dropdown-menu" role="menu">
            <%- Devise.omniauth_providers.each do |provider| %>
              <li>
              <%= link_to image_tag("#{provider.to_s}_64.png", alt: "#{provider.to_s.titleize}"),
                omniauth_authorize_path(User, provider),
                method: "post",
                title: "Sign-in with #{provider.to_s.titleize}"
                %>
              </li>
            <% end -%>
            </ul>
            </li>
          <% end %>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <% if alert %>
      <div id="alert"><%= alert %></div>
    <% end %>
    <% if notice %>
      <div id="notice"><%= notice %></div>
    <% end %>
    <br />
    <br />
    <br />
    <br />
    <div class='row'>
      <div class='col-sm-4'><%= image_tag 'logo.jpg' %></div>
      <div class='col-sm-8'><%= yield %></div>
    </div>
  </div>
  <%#= console if Rails.env.development? %>
</body>
</html>
