<div class='row'>
  <div class='col-sm-2'>
    <strong>Name:</strong>
  </div>
  <div class='col-sm-10'>
    <%= @tournament.name %>
  </div>
</div>
<div class='row'>
  <div class='col-sm-2'>
    <strong>Image:</strong>
  </div>
  <div class='col-sm-10'>
    <%= image_tag @tournament.image, alt: @tournament.name %>
  </div>
</div>
<div class='row'>
  <div class='col-sm-2'>
    <strong>Description:</strong>
  </div>
  <div class='col-sm-10'>
    <%= @tournament.description %>
  </div>
</div>
<br />
<div class='row'>
  <div class='col-sm-2'>
    <%= button_to 'List', tournaments_path, method: :get, class: 'form-control btn btn-default', title: 'List all tournaments' %>
  </div>
  <div class='col-sm-2'>
    <%= button_to 'Edit', edit_tournament_path(@tournament), method: :get, class: 'form-control btn btn-primary' %>
  </div>
</div>
