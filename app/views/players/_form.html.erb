<%= form_for(@player, html: { class: 'form-horizontal' }) do |f| %>
  <% if @player.errors.any? %>
    <div class='alert alert-danger' role='alert'>
      <h2><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
        <% @player.errors.full_messages.each do |message| %>
          <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'name *', class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nationality, class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <%= f.select :nationality, select_country_codes, class: ' form-control',
        selected: (!@player.nationality.nil?) ? @player.nationality : 'US' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :gender, class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <%= f.select :gender, ['','M','F'], class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <%= f.text_field :image, class: 'form-control' %>
    </div>
  </div>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <div class='text-center'>
    <%= f.submit 'Save', class: "btn btn-primary" %>
  </div>
  <div class='text-center'>
    <small>* Required</small>
  </div>
<% end %>
