<div class='row'>
  <p class='col-sm-2'>
    <strong>User:</strong>
  </p>
  <p class='col-sm-10'>
    <%= @player.user.username %>
  </p>
</div>

<div class='row'>
  <p class='col-sm-2'>
    <strong>Name:</strong>
  </p>
  <p class='col-sm-10'>
    <%= @player.name %>
  </p>
</div>

<div class='row'>
  <p class='col-sm-2'>
    <strong>Nationality:</strong>
  </p>
  <p class='col-sm-10'>
    <%= @player.nationality %>
  </p>
</div>

<div class='row'>
  <p class='col-sm-2'>
    <strong>Gender:</strong>
  </p>
  <p class='col-sm-10'>
    <%= @player.gender %>
  </p>
</div>

<div class='row'>
  <p class='col-sm-2'>&nbsp;</p>
  <p class='col-sm-10'>
    <%= image_tag @player.image unless @player.image.blank? %>
  </p>
</div>

<div>
  <%= button_to 'Edit', edit_player_path(@player), class: "btn btn-primary", method: :get %>
</div>
