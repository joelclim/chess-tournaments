<% if @results.size > 0 %>
  <h1>Results</h1>
  <ul style='list-style: none;'>
    <% @results.each do |result| %>
    <li><%= link_to result.name, result %> (<%= result.class.to_s.humanize %>)</li>
    <% end %>
  </ul>
<% else %>
  <h3>No results</h3>
  <p>You can only search for Players, Teams or Tournaments by name</p>
<% end %>
