<h1>Listing Games</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Event</th>
      <th>Name</th>
      <th>Date</th>
      <th>Timecontrol</th>
      <th>While elo</th>
      <th>Black elo</th>
      <th>Site</th>
      <th>Result</th>
      <th>Fen</th>
      <th>Pgn</th>
      <th>Tournament</th>
      <th>Visible to</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.event %></td>
        <td><%= game.name %></td>
        <td><%= game.date %></td>
        <td><%= game.timecontrol %></td>
        <td><%= game.while_elo %></td>
        <td><%= game.black_elo %></td>
        <td><%= game.site %></td>
        <td><%= game.result %></td>
        <td><%= game.fen %></td>
        <td><%= game.pgn %></td>
        <td><%= game.division.name_with_tournament %></td>
        <td><%= game.visibility.humanize %></td>
        <td><%= link_to 'Edit', edit_game_path(game) if game.players.include? current_user.player %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } if game.players.include? current_user.player %></td>
      </tr>
    <% end %>
  </tbody>
</table>
