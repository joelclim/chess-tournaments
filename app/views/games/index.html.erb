<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Name</th>
      <th>Date</th>
      <th>Timecontrol</th>
      <th>While elo</th>
      <th>Black elo</th>
      <th>Site</th>
      <th>Result</th>
      <th>Fen</th>
      <th>Pgn</th>
      <th>Division</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.event %></td>
        <td><%= game.name %></td>
        <td><%= game.date %></td>
        <td><%= game.timecontrol %></td>
        <td><%= game.while_elo %></td>
        <td><%= game.black_elo %></td>
        <td><%= game.site %></td>
        <td><%= game.result %></td>
        <td><%= game.fen %></td>
        <td><%= game.pgn %></td>
        <td><%= game.division_id %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

