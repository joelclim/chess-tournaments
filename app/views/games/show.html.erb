<div class='row'>
  <div class='col-sm-10'>
    <div id="board_<%= @game.id %>" style='width: 400px'></div>
  </div>
</div>
<p>
  <strong>Event:</strong>
  <%= @game.event %>
</p>

<p>
  <strong>Name:</strong>
  <%= @game.name %>
</p>

<p>
  <strong>Date:</strong>
  <%= @game.date %>
</p>

<p>
  <strong>Timecontrol:</strong>
  <%= @game.timecontrol %>
</p>

<p>
  <strong>While elo:</strong>
  <%= @game.while_elo %>
</p>

<p>
  <strong>Black elo:</strong>
  <%= @game.black_elo %>
</p>

<p>
  <strong>Site:</strong>
  <%= @game.site %>
</p>

<p>
  <strong>Result:</strong>
  <%= @game.result %>
</p>

<p>
  <strong>Fen:</strong>
  <span id='fen_<%= @game.id %>'><%= @game.fen %></span>
</p>

<p>
  <strong>Pgn:</strong>
  <span id='pgn_<%= @game.id %>'><%= @game.pgn %></span>
</p>

<p>
  <strong>Division:</strong>
  <%= @game.division.name_with_tournament if @game.division %>
</p>
<script type='text/javascript'>
<%= render 'board.js', game: @game %>
</script>
