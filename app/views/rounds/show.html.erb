<h1>Round <%= @round.name %></h1>

<h3>
  <%= @round.description %>
</h3>

<div class='row'>
  <div class='col-sm-2'><strong>Start date:</strong></div>
  <div class='col-sm-10'><%= @round.start_date %></div>
</div>

<div class='row'>
  <div class='col-sm-2'><strong>End date:</strong></div>
  <div class='col-sm-10'><%= @round.end_date %></div>
</div>

<div class='row'>
  <div class='col-sm-2'><strong>Tournament:</strong></div>
  <div class='col-sm-10'><%= @round.tournament.name %></div>
</div>
<br />
<div class='row'>
  <div class='col-sm-2'></div>
  <div class='col-sm-10'>
    <div class='btn-group' role='group' aria-label='rounds control'>
      <%= link_to 'Tournament', tournament_path(@round.tournament), class: 'btn btn-default', method: :get %>
      <%= link_to 'Edit', edit_round_path(@round), class: 'btn btn-primary', method: :get %>
    </div>
  </div>
</div>
