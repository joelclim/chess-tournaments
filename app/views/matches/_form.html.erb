<%= form_for([@round,@match], html: { class: "form-horizontal" }) do |f| %>
  <% if @match.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@match.errors.count, "error") %> prohibited this match from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @match.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
      <%= f.label :name, :class => 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
      <%= f.label :description, :class => 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_area :description, :class => 'form-control' %>
    </div>
  </div>
  <% if params[:action] == 'new' %>
    <%= f.hidden_field :round_id %>
  <% else %>
    <div class="form-group">
      <%= f.label :round_id, :class => 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= f.number_field :round_id, :class => 'form-control' %>
      </div>
    </div>
  <% end %>
  <div class="form-group">
      <%= f.label :location, :class => 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_area :location, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
      <%= f.label :home_team_id, :class => 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.hidden_field :home_team_id %>
      <%= text_field_tag :home_team_name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
      <%= f.label :guest_team_id, :class => 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.hidden_field :guest_team_id %>
      <%= text_field_tag :guest_team_name %>
    </div>
  </div>
  <% if params[:action] == 'new' %>
      <%= f.hidden_field :postponed_date %>
  <% else %>
    <div class="form-group">
      <%= f.label :postponed_date, :class => 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= f.datetime_select :postponed_date, :class => 'form-control' %>
      </div>
    </div>
  <% end %>

  <% if params[:action] == 'new' %>
    <%= f.hidden_field :result_id %>
  <% else %>
    <div class="form-group">
        <%= f.label :result_id, :class => 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= f.number_field :result_id, :class => 'form-control' %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.hidden_field :home_team_lineup_id %>
      <%= f.hidden_field :guest_team_lineup_id %>
      <%= f.submit nil, :class => 'btn btn-primary' %>
    </div>
  </div>

<% end %>
